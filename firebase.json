{
  "hosting": [
    {
      "public": "build",
      "target": "prod",
      "headers": [
        {"source": "**/*.html", "headers": [{"key": "Cache-Control", "value": "max-age=0, no-cache"}]},
        {"source": "**/*.@css|js", "headers": [{"key": "Cache-Control", "value": "max-age=0"}]}
      ], 
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "public": "build",
      "target": "mint-test",
      "headers": [
        {"source": "**/*.html", "headers": [{"key": "Cache-Control", "value": "max-age=0, no-cache"}]},
        {"source": "**/*.@css|js", "headers": [{"key": "Cache-Control", "value": "max-age=0"}]}
      ], 
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}


